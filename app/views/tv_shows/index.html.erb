<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
        <div class="col-12">
<h1>Tv Shows</h1>

<div class="table-responsive-lg">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Release date</th>
      <th>Rating</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.summary %></td>
        <td><%= tv_show.release_date %></td>
        <td><%= tv_show.rating %></td>
        <td><%= image_tag(url_for(tv_show.nationality.flag_img))  %></td>
        <td><%= link_to 'Show', tv_show, class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Edit', edit_tv_show_path(tv_show), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', tv_show, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Tv Show', new_tv_show_path, class: 'btn btn-info' %>
<br>
    </div>
  </div>
</div>
<br>
