<br>
<h1>Agregar actores a Tv show</h1>

<%= form_with(model:[@tv_show, @actor]) do |form| %>
    <div class="field">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name %>
    </div>

    <div class="field">
        <%= form.label :last_name %><br>
        <%= form.text_field :last_name %>
    </div>

    <div class="field">
        <%= form.label :age %><br>
        <%= form.number_field :age %>
    </div>
    <br>
    <div class="field">
        <%= form.label :image %><br>
        <%= form.file_field :image %>
    </div>
    <br><br>
    <div class="field">
        <%= form.submit %>
    </div>
<% end %>
